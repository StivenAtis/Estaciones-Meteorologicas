@page
@model FrontEnd2.Pages.EditarCargoModel
@{
}

<h1>Editar Cargos</h1>

<form method="POST">
    <input type="hidden" asp-for="@Model.cargo.Id" id="cargo.Id" name="cargo.Id" class="form-control">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Codigo</label>
            <input type="text" asp-for="@Model.cargo.Codigo" id="cargo.Codigo" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Descripcion</label>
            <input type="text" asp-for="@Model.cargo.Descripcion" id="cargo.Descripcion" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Estado</label>
            <input type="text" asp-for="@Model.cargo.Estado" id="cargo.Estado" class="form-control">
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-block" asp-page-handler="Editar">Guardar</button>
        </div>
    </div>

</form>
<br><br>
<a asp-page="../Maestros/Cargos" class="btn-default">Lista de Cargos</a>