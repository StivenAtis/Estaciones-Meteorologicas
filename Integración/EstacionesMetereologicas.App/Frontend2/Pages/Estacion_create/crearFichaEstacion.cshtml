<section id="home"
	style="padding:160px 0;background-image: url(https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1474&q=80); background-position: center; background-repeat: no-repeat;background-size: cover;background-attachment:fixed;">
	<div class="container">
		<div class="textwidget">
			<h1 class="toptitle">INGRESO DATOS ESTACION <br /><br />
				<!--<i class="fa fa-user roundicon"></i> -->
			</h1>
			<div class="contactstyle topform">
				<form method="POST">
					<div class="form">
						<p>
							<label>Código:</label>
							<input type="text" name="CodEstacion" placeholder="*">
						</p>
						<p>
							<label>Nombre Estación:</label>
							<input type="text" name="NameEstacion" placeholder="*">
						</p>
						<p>
							<label>Fecha Instalación:</label>
							<input type="datetime-local" name="FechaEstacion" placeholder="*">
						</p>
						<p>
							<label>Latitud:</label>
							<input type="text" name="LatEstacion" placeholder="*">
						</p>
						<p>
							<label>Longitud:</label>
							<input type="text" name="LonEstacion" placeholder="*">
						</p>
						<p>
							<label>Municipio:</label>
							<input type="text" name="MuniEstacion" placeholder="*">
						</p>
						<button type="submit" id="submit" class="clearfix btn">Guardar</button>
                        <a href="~/Estacion/FichaEstacion"> <button type="button" class="clearfix btn">Cancelar</button></a>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>