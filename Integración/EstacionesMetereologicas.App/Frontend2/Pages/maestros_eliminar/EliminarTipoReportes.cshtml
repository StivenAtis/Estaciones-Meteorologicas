@page
@model FrontEnd2.Pages.EliminarTipoReportesModel
@{
}
<h1>Eliminar Tipo Reportes</h1>

<form method="POST">
    <input type="hidden" asp-for="@Model.tipoReporte.Id" id="tipoReporte.Id" name="tipoReporte.Id" class="form-control">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Codigo</label>
            <input type="text" asp-for="@Model.tipoReporte.Codigo" id="tipoReporte.Codigo" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Nombre reporte</label>
            <input type="text" asp-for="@Model.tipoReporte.Nombre_TipoReporte" id="tipoReporte.Nombre_TipoReporte" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Estado</label>
            <input type="text" asp-for="@Model.tipoReporte.Estado" id="tipoReporte.Estado" class="form-control">
        </div>
    </div>

    <br>

    <div class="row">
       <div class="col-md-12">
            <input type="hidden" name="Id" value="@Model.tipoReporte.Id" />
            <button type="submit" class="btn btn-primary btn-block" asp-page-handler="Eliminar">Eliminar </button>
        </div>
    </div>

</form>
<br><br>
<a asp-page="../Maestros/TipoReportes" class="btn-default">Lista de Tipos de Reportes</a>