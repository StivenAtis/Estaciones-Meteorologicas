@page
@model FrontEnd2.Pages.EditMantTecnModel
@{
}

<h1>Editar Reporte</h1>

<form method="POST">
    <input type="hidden" asp-for="@Model.reportes.Id" id="reportes.Id" name="reportes.Id" class="form-control">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Id_TipoReporte</label>
            <input type="text" asp-for="@Model.reportes.Id_TipoReporte" id="novedades.Id_TipoReporte" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Descripcion</label>
            <input type="text" asp-for="@Model.reportes.Descripcion" id="novedades.Descripcion" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Codigo Actuacióm</label>
            <input type="text" asp-for="@Model.reportes.Codigo_actuacion" id="novedades.Codigo_Estacion" class="form-control">
        </div>
        <div class="form-group col-md-4">
            <label>Identificación Tecnico</label>
            <input type="text" asp-for="@Model.reportes.Ident_persona" id="novedades.Ident_persona" class="form-control">
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-block" asp-page-handler="Editar">Guardar</button>
        </div>
    </div>

</form>
<br><br>
<a asp-page="../Reportes/MantenimientosTecnico" class="btn-default">Lista de reportes</a>
